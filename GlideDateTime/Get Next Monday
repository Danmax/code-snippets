// Get Next Monday GlideDateTime

function GetNextMonday() {
    var date = new GlideDateTime();
    var gd = new GlideDate();
    var today = gd.getDayOfMonthNoTZ()
    var dayInWeek = date.getDayOfWeek();
    var nextMonday = (today - dayInWeek + 8);
    date.addDaysLocalTime(nextMonday);
    gs.info(date.getDate());
    return date.getDate();

}
GetNextMonday()
